@page
@model MsRazorMovie.Pages.Accounts.IndexModel

@{
    ViewData["Title"] = "Account Dashboard";
}

<h1>Account Dashboard</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>Welcome, @User.Identity.Name!</p>

    <ul>
        <li><a asp-page="/Accounts/Profile">View Profile</a></li>
        <li>
            <form method="post" asp-page="/Accounts/Logout">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <p>You are not logged in.</p>
    <a asp-page="Login" class="btn btn-primary">Login</a>
}
